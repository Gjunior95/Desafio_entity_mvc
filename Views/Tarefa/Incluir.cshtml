@model Desafio_entity_mvc.Models.Tarefa
 

@{
    ViewData["Title"] = "Incluir Tarefa";
}

<h2 class="text-center">Nova Tarefa</h2>

<hr/>
 <div class = "d-flex justify-content-center">
    <div class = "col-md-4">
        <form asp-action="Incluir">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input type="Date" asp-for="Data" class="form-control" />
            </div>
            <div class="form-group">                
                <label asp-for="Status" class="control-label"></label>
                </br>
                <select asp-for="Status" class="control-label" asp-items="Html.GetEnumSelectList<EnumStatusTarefa>()">  </select>      
             </div>
             
 
            <br>
            <div class="form-group">
                 <button type="submit" value="Incluir" class="btn btn-primary bi-plus-circle"> Incluir </button>
                 <button class="btn btn-secondary bi-arrow-return-left" asp-action="Index"> Voltar</button>
            </div>
            
        </form>
    </div>
</div>
</hr>
<br>
