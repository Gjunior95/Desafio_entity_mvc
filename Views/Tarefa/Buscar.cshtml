@model IEnumerable<Desafio_entity_mvc.Models.Tarefa>
@{
    ViewData["Title"] = "Buscar Tarefa";
   
}

<h2 class="text-center">Buscar Tarefas</h2>
<hr/>
 
<form class="row row-cols-lg-auto g-3 align-items-center" asp-controller="Tarefa" asp-action="Buscar" method="get">

  <div class="col-12">
      <label class="visually-hidden">TÃ­tulo</label>
      <div class="input-group">      
       <input type="text" name="buscaTitulo" class="form-control" id="inlineFormInputGroup" placeholder="Pesquisar Titulo">     
        <button type="submit" class="btn btn-primary bi-search"></button>  
      </div>          
  </div>
  <div class="col-12">
    <label class="visually-hidden">Data</label>
    <div class="input-group">      
      <input type="Date" name="buscaData" class="form-control" id="inlineFormInputGroup" placeholder="Data">
      <button type="submit" class="btn btn-primary bi-search"></button>  
    </div>    
  </div>
  <div class="col-12">
    <label class="visually-hidden">Status</label>
    <div class="input-group">
      <div class="input-group"></div>
      <select class="form-select" name="buscaStatus" id="inputGroupSelect01" asp-items="Html.GetEnumSelectList<EnumStatusTarefa>()">  
         <option value="">Selecione</option>
      </select>      
      <button type="submit" class="btn btn-primary bi-search"></button>   
    </div>    
  </div>
</form>
<hr/>
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-secondary">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Status)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary active bi-pencil" asp-action="Editar" asp-route-id="@item.Id"> Editar</a> 
                            <a class="btn btn-danger active bi-trash3"  asp-action="Deletar" asp-route-id="@item.Id"> Deletar</a> 
                        </div>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
 <br>
  <a class="btn btn-secondary bi-arrow-return-left" asp-action="Index"> Voltar</a>